<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/half_transparent">
    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:gravity="center">
    </TextView>
    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#DCDCDC"/>
    <TextView
        android:id="@+id/tx_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="气象:"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp">
    </TextView>
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/tx_air_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
        <TextView
            android:id="@+id/val_air_tem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text=""
            android:textSize="13sp"
            android:gravity="left"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tx_air_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/val_air_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text=""
            android:textSize="13sp"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/tx_soil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="土壤:"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/tx_soil_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_soil_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/tx_soil_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_soil_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/tx_soil_salt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_soil_salt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/tx_soil_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_soil_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tx_plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="植物:"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/tx_plant_fluid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_plant_fluid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/tx_plant_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_plant_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/tx_plant_rad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_plant_rad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/tx_plant_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/val_plant_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>