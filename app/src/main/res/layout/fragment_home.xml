<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main_out_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_more">
        </ImageView>
        <TextView
            android:id="@+id/tv_station"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textColor="@color/white">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_person">
        </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="60dp">
    <TextView
        android:id="@+id/tv_index"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white">
    </TextView>
    <TextView
            android:id="@+id/tv_index_unit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp">
    </TextView>
</LinearLayout>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_index"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_index"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:dropDownVerticalOffset="25dp"
        android:overlapAnchor="true"
        android:popupBackground="@color/transparent"
        android:spinnerMode="dropdown"
        android:gravity="center|center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_one_day"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_home"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="近1天"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_seven_day"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_one_day"
            android:background="@drawable/btn_home"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="近7天"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_thirty_day"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_home"
            android:layout_toRightOf="@+id/btn_seven_day"
            android:text="近30天"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_ninty_day"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_home"
            android:layout_toRightOf="@+id/btn_thirty_day"
            android:text="近90天"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <com.github.mikephil.charting.charts.LineChart
         android:id="@+id/linechart"
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="80dp"
         android:background="@color/transparent">

     </com.github.mikephil.charting.charts.LineChart>
 </RelativeLayout>
</LinearLayout>