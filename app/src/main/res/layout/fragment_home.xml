<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main_out_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_station"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:dropDownVerticalOffset="20dp"
            android:entries="@array/cities"
            android:overlapAnchor="false"
            android:popupBackground="@color/transparent"
            android:spinnerMode="dropdown" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_station"
            android:textSize="15sp"
            android:text="连云港"
            android:layout_below="@id/sp_station"
            android:visibility="invisible"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tem"
        android:textSize="30sp"
        android:text="31℃"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_index"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:entries="@array/cities"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/transparent"
        android:overlapAnchor =  "false"
        android:dropDownVerticalOffset = "25dp"
        android:backgroundTint="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_weather"
        android:text=""
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reportdata"
        android:text=""
        android:textSize="15sp"
        android:textColor="@color/white"
        android:visibility="invisible"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_win"
        android:text=""
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_air"
        android:text=""
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>
    <com.example.weatherapplication.view.HScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:id="@+id/HScrollView"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.weatherapplication.view.LineChartView
                android:id="@+id/simpleLineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </com.example.weatherapplication.view.HScrollView>
</LinearLayout>